<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="#B40A1B"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_thumb_up"
        android:layout_alignStart="@+id/image_view_content"
        android:layout_below="@+id/image_view_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:layout_alignEnd="@+id/image_view_content"
            android:layout_below="@+id/image_view_content" />

    <TextView
        android:id="@+id/text_view_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_view_content"
        android:layout_alignStart="@+id/image_view_content"
        android:textSize="16sp"
        android:layout_marginLeft="32dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Likes" />

    <TextView
        android:id="@+id/text_view_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        android:textStyle="bold"
        android:layout_marginRight="32dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_below="@+id/image_view_content"
        android:layout_alignEnd="@id/image_view_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>