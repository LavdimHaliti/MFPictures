<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#414042"
    tools:context=".DetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#B40A1B">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view_detail"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:src="@mipmap/ic_launcher" />


            <ImageView
                android:id="@+id/img_view_likes"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/img_view_share"
                android:layout_alignStart="@id/image_view_detail"

                android:layout_marginTop="32dp"
                android:src="@drawable/ic_thumb_up" />

            <TextView
                android:id="@+id/text_view_likes_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_view_share"
                android:layout_alignStart="@+id/image_view_detail"
                android:layout_marginTop="37dp"
                android:layout_marginLeft="48dp"
                android:text="Likes"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_user_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_view_likes"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="48dp"
                android:layout_alignStart="@+id/image_view_detail"
                android:text="user"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_favorites_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/image_view_detail"
                android:layout_below="@+id/img_view_user"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="48dp"
                android:text="favorites"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_downloads_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_view_share"
                android:layout_alignEnd="@+id/img_view_download"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="10dp"
                android:text="downloads"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_views_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_downloads_detail"
                android:layout_alignEnd="@+id/img_view_download"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="15dp"
                android:text="views"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_comments_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_view_views_detail"
                android:layout_alignEnd="@+id/image_view_detail"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="48dp"
                android:text="comments"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_view_user"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignStart="@+id/image_view_detail"
                android:layout_below="@+id/img_view_likes"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_person" />

            <ImageView
                android:id="@+id/img_view_favorites"

                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/img_view_user"
                android:layout_alignStart="@+id/image_view_detail"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_star_white" />

            <ImageView
                android:id="@+id/img_view_downloads"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="32dp"
                android:layout_below="@+id/img_view_download"
                android:layout_alignEnd="@+id/image_view_detail"
                android:src="@drawable/ic_arrow_downward" />

            <ImageView
                android:id="@+id/img_view_views"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_visibility"
                android:layout_alignEnd="@+id/img_view_download"
                android:layout_below="@+id/img_view_downloads"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/img_view_download"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/image_view_detail"
                android:layout_alignEnd="@id/image_view_detail"
                android:src="@drawable/ic_file_download" />

            <ImageView
                android:id="@+id/img_view_comments"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/img_view_views"
                android:layout_alignEnd="@+id/image_view_detail"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_comment" />

            <ImageView
                android:id="@+id/img_view_share"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/image_view_detail"
                android:layout_toStartOf="@+id/img_view_download"
                android:layout_marginRight="32dp"
                android:src="@drawable/ic_share" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>